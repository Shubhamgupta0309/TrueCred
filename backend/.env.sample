# TrueCred Backend Environment Variables

# Flask Application Settings
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-change-in-production

# MongoDB Settings
MONGODB_URI=mongodb://localhost:27017/truecred
MONGODB_NAME=truecred

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days

# Blockchain Settings
ETHEREUM_PROVIDER_URL=https://goerli.infura.io/v3/your-infura-api-key
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key
ETHEREUM_CHAIN_ID=5  # Goerli testnet
CONTRACT_ADDRESS=your-deployed-contract-address
INFURA_API_KEY=your-infura-api-key

# IPFS Settings
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# API Version
API_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO

# Email Settings (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=True
EMAIL_SENDER=TrueCred <no-reply@truecred.com>
